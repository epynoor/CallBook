<div class="modal fade text-left" id="callPlan-update-modal" role="dialog" aria-labelledby="reassign-modal-label" aria-hidden="true" style="z-index:1051;">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title text-white" id="reassign-modal-label" style="font-size:18px">Plan <span id="option">Approve</span></h5>
                <button type="button" class="close text-white" onclick="CloseModalPopup();" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-fixed">
                <div class="form-group row" style="margin-bottom:0.3rem">
                    <label class ="col-sm-2 col-form-label-sm text-right" style="font-size:12px">Category <span class="text-danger ml-005">*</span></label>
                    <div class="col-sm-4 ">
                        <select id="UCategoryId" class=" form-control form-control-sm select2" placeholder="Select a Category" style="width: 100%;">
                        </select> 
                        <input type="hidden" id="UtempId" />
                    </div>
                    <label class ="col-sm-2 col-form-label-sm text-right" style="font-size:12px">Call Type <span class="text-danger ml-005">*</span></label>
                    <div class="col-sm-4 ">
                        <select id="UCallTypeId" class="form-control form-control-sm select2" placeholder="Select a Call Type" style="width: 100%;">
                    </select>
                    </div>
                    
                </div>
                <div class="form-group row" style="margin-bottom:0.3rem">
                    <label class ="col-sm-2 col-form-label-sm text-right" style="font-size:12px">CIF</label>
                    <div class="col-sm-4 ">
                        <input type="text" id="UCIF" class="form-control form-control-sm" placeholder="Enter CIF" autocomplete="off" style="width: 100%;">
                    </div>                    
                    <label class ="col-sm-2 col-form-label-sm text-right" style="font-size:12px">Name <span class="text-danger ml-005">*</span></label>
                    <div class=" col-sm-4 ">
                        <input type="text" id="UName" class=" form-control form-control-sm" placeholder="Enter Name" autocomplete="off" style="width: 100%;"> 
                    </div>                         
                </div>
                <div class="form-group row" style="margin-bottom:0.3rem">
                    <label class ="col-sm-2 col-form-label-sm text-right" style="font-size:12px">Subject <span class="text-danger ml-005">*</span></label>
                    <div class="col-sm-10">
                        <input type="text" id="USubject" class="form-control form-control-sm" placeholder="Enter Subject" autocomplete="off" style="width: 100%;">
                    </div>
                </div>
                <div class="form-group row" style="margin-bottom:0.3rem">
                    <label class ="col-sm-2 col-form-label-sm text-right" style="font-size:12px">Description</label>
                    <div class="col-sm-10">
                        <input type="text" id="UPurpose" class="form-control form-control-sm" placeholder="Enter Description" autocomplete="off" style="width: 100%;">
                    </div>
                    
                </div>
                <div class="form-group row" style="margin-bottom:0.3rem">
                    <label class ="col-sm-2 col-form-label-sm text-right" style="font-size:12px">Tentative Date <span class="text-danger ml-005">*</span></label>
                    <div class="col-sm-4">
                        <input type="text" id="UTentativeDate" class=" form-control form-control-sm" placeholder="(dd-MMM-yyyy)" autocomplete="off" style="width: 100%;" readonly>
                    </div>                    
                         
                </div>
                
                <div class="row" style="text-align:center">
                    <div class="col-md-12 float-right">
                        <div class="form-group">
                            <button type="button" class="btn btn-info" id="btn-callPlan-approve">Approve</button>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>