<div class="modal fade text-left" id="callPlan-entry-modal" role="dialog" aria-labelledby="reassign-modal-label" aria-hidden="true" style="z-index:1051;">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h6 class="modal-title text-white" id="reassign-modal-label">Lead Plan <span id="option">Entry</span></h6>
                <button type="button" class="close text-white" onclick="CloseModalPopup();" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-fixed">
                <div class="form-group row" style="margin-bottom:0.3rem">
                    <label class ="col-sm-2 col-form-label-sm text-right">Category <span class="text-danger ml-005">*</span></label>
                    <div class="col-sm-4 ">
                        <select id="CategoryId" class=" form-control form-control-sm select2" placeholder="Select a Category" style="width: 100%;">
                        </select> 
                        <input type="hidden" id="tempId" />
                    </div>
                    <label class ="col-sm-2 col-form-label-sm text-right">Lead Type <span class="text-danger ml-005">*</span></label>
                    <div class="col-sm-4 ">
                        <select id="CallTypeId" class="form-control form-control-sm select2" placeholder="Select a Call Type" style="width: 100%;">
                    </select>
                    </div>
                    
                </div>
                <div class="form-group row" style="margin-bottom:0.3rem">
                    <label class ="col-sm-2 col-form-label-sm text-right">CIF</label>
                    <div class="col-sm-4 ">
                        <input type="text" id="CIF" class="form-control form-control-sm" placeholder="Enter CIF" autocomplete="off" style="width: 100%;">
                    </div>                    
                    <label class ="col-sm-2 col-form-label-sm text-right">Name <span class="text-danger ml-005">*</span></label>
                    <div class=" col-sm-4 ">
                        <input type="text" id="Name" class=" form-control form-control-sm" placeholder="Enter Name" autocomplete="off" style="width: 100%;"> 
                    </div>                         
                </div>
                <div class="form-group row" style="margin-bottom:0.3rem">
                    <label class ="col-sm-2 col-form-label-sm text-right">Subject <span class="text-danger ml-005">*</span></label>
                    <div class="col-sm-10">
                        <input type="text" id="Subject" class="form-control form-control-sm" placeholder="Enter Subject" autocomplete="off" style="width: 100%;">
                    </div>
                </div>
                <div class="form-group row" style="margin-bottom:0.3rem">
                    <label class ="col-sm-2 col-form-label-sm text-right">Description</label>
                    <div class="col-sm-10">
                        <input type="text" id="Purpose" class="form-control form-control-sm" placeholder="Enter Description" autocomplete="off" style="width: 100%;">
                    </div>
                    
                </div>
                <div class="form-group row" style="margin-bottom:0.3rem">
                    <label class ="col-sm-2 col-form-label-sm text-right">Tentative Date <span class="text-danger ml-005">*</span></label>
                    <div class="col-sm-4">
                        <input type="text" id="TentativeDate" class=" form-control form-control-sm" placeholder="(dd-MMM-yyyy)" autocomplete="off" style="width: 100%;" readonly>
                    </div>                    
                    <div class="col-auto">
                        <button type="button" class="btn btn-primary mb-3" id="btn-Temp-Add">Add Plan</button>
                        <button type="button" class="btn btn-primary mb-3" id="btn-Temp-cancle">Clear </button>
                    </div>      
                </div>

                <div id="tempCallPlan-summary" class="media-list position-relative">
                    <div class="table-responsive">
                        <table class="table table-padded table-xl mb-0 w-100" id="temp-callplan-list-table">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th>Call Type</th>
                                    <th>CIF</th>                                                       
                                    <th>Name</th>      
                                    <th>Subject</th>
                                    <th>Tentative Date</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-12 float-right">
                        <div class="form-group" style="text-align:center">
                            <button type="button" class="btn btn-info" id="btn-callPlan-save">Save Plan</button>
                            @*<button type="button" class="btn grey btn-secondary" data-dismiss="modal">Close</button>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>